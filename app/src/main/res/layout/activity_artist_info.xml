<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:ignore="MissingPrefix">


        <TextView
            android:id="@+id/info_artists"
            fontPath="fonts/Font-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="@string/info_artist"
            android:textColor="?android:attr/textColorPrimary"

            android:textSize="@dimen/text_title" />

        <ImageView
            android:id="@+id/artist_1_picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_splash_screen"
            app:srcCompat="@drawable/ic_artist_1" />

        <TextView
            android:id="@+id/artist_1_name"
            fontPath="fonts/Font-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_padding"
            android:gravity="center_horizontal"
            android:text="@string/artist_1_name"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_title" />

        <TextView
            android:id="@+id/artist_1_description"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/artist_1_description"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content" />

        <ImageView
            android:id="@+id/artist_2_picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_splash_screen"
            app:srcCompat="@drawable/ic_artist_2" />

        <TextView
            android:id="@+id/artist_2_name"
            fontPath="fonts/Font-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_padding"
            android:gravity="center_horizontal"
            android:text="@string/artist_2_name"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_title" />

        <TextView
            android:id="@+id/artist_2_description"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_padding"
            android:text="@string/artist_2_description"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content" />

        <ImageView
            android:id="@+id/artist_3_picture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_splash_screen"
            app:srcCompat="@drawable/ic_artist_3" />

        <TextView
            android:id="@+id/artist_3_name"
            fontPath="fonts/Font-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_margin"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"
            android:layout_marginTop="@dimen/content_padding"
            android:gravity="center_horizontal"
            android:text="@string/artist_3_name"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_title" />


        <TextView
            android:id="@+id/artist_3_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_3_description"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_size"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_shadow"
            android:background="@drawable/toolbar_shadow" />

    </LinearLayout>

</ScrollView>
