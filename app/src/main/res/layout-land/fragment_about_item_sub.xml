<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/content_padding"
    android:layout_marginEnd="@dimen/content_padding"
    android:layout_marginBottom="@dimen/content_padding"
    app:cardBackgroundColor="?attr/card_background"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="@bool/card_use_compat_padding"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/card_background">


        <TextView
            android:id="@+id/collection_artist"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/content_margin"
            android:text="@string/about_artists"
            android:textAlignment="textStart"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:theme="@style/RippleStyle" />

        <TextView
            android:id="@+id/collection_carnt"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/content_margin"
            android:text="@string/about_important_links"
            android:textAlignment="textStart"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:theme="@style/RippleStyle" />

        <TextView
            android:id="@+id/title"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/content_margin"
            android:text="@string/about_contributors_title"
            android:textAlignment="textStart"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:theme="@style/RippleStyle" />

        <TextView
            android:id="@+id/showcase"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/content_margin"
            android:text="@string/about_showcased"
            android:textAlignment="textStart"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:theme="@style/RippleStyle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/color_database"
            fontPath="fonts/Font-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="@dimen/content_margin"
            android:text="@string/about_color_guide"
            android:textAlignment="textStart"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:theme="@style/RippleStyle"
            android:visibility="gone" />



    </LinearLayout>

</android.support.v7.widget.CardView>